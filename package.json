{
  "name": "helldivers-stratagem-commands",
  "displayName": "helldivers-stratagem-commands",
  "description": "execute custom commands with helldivers stratagems for maximum democracy",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
    { "command": "helldivers.ðŸ¡…", "title": "Helldivers Up" },
    { "command": "helldivers.ðŸ¡‡", "title": "Helldivers Down" },
    { "command": "helldivers.ðŸ¡„", "title": "Helldivers Left" },
    { "command": "helldivers.ðŸ¡†", "title": "Helldivers Right" },
    { "command": "helldivers.executeStratagem", "title": "Execute Stratagem", "icon": "$(play)" },
    { "command": "helldivers.refreshStratagems", "title": "Refresh", "icon": "$(refresh)" }
  ],
  "keybindings": [
    { "command": "helldivers.ðŸ¡…", "key": "up", "when": "editorTextFocus" },
    { "command": "helldivers.ðŸ¡‡", "key": "down", "when": "editorTextFocus" },
    { "command": "helldivers.ðŸ¡„", "key": "left", "when": "editorTextFocus" },
    { "command": "helldivers.ðŸ¡†", "key": "right", "when": "editorTextFocus" }
  ],
  "viewsContainers": {
    "panel": [
      {
        "id": "helldivers",
        "title": "Helldivers Stratagems",
        "icon": "$(rocket)"
      }
    ]
  },
  "views": {
    "helldivers": [
      {
        "id": "helldivers.stratagems",
        "name": "Available Stratagems"
      }
    ]
  },
  "menus": {
    "view/title": [
      {
        "command": "helldivers.refreshStratagems",
        "when": "view == helldivers.stratagems",
        "group": "navigation"
      }
    ],
    "view/item/context": [
      {
        "command": "helldivers.executeStratagem",
        "when": "view == helldivers.stratagems && viewItem == stratagem",
        "group": "inline"
      }
    ]
  }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "lint": "eslint src",
    "test": "vscode-test",
    "compile": "node esbuild.config.js",
    "watch": "node esbuild.config.js --watch",
    "pretest": "npm run compile && npm run lint"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.9",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2"
  }
}
